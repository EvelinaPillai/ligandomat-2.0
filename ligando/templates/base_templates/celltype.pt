
<html metal:use-macro="load: ../base_layout.pt">
<!DOCTYPE html>
<html lang="${request.locale_name}">
<head>


</head>

<body>
<div class="main_wrapper">
    <h1 style="text-align: center">${celltype}</h1>
    <table >
            <tr>
                <td>Sources:</td><td id="source_stat"> </td>
            </tr>
    </table>
    <table id="example"  class="info_table" cellspacing="0" width="100%">
        <thead>
        <tr>
        <th>Source</th>
        </tr>
        </thead>
    </table>
</div>

<script>

$(document).ready(function() {
// create dataTable
$('#example').dataTable( {
    "paging":   false,
    "info":     false,
    searching: false,
    data: ${sources},
    columns: [
        { data: "patient_id",
            "render": function ( data, type, row ) {
                return "<a class='nostylelink'  href= '/source/"+data + "'>"+data + "</a>" ;
            }}
    ]
} );
} );
// set statistics
$(document).ready(function() {
    document.getElementById("source_stat").innerHTML = ${sources}.length;

});

</script>



</body>

</html>
