<!DOCTYPE html>

<html metal:use-macro="load: ../base_layout.pt">
<html lang="${request.locale_name}">
<head>

</head>

<body>
<metal:block fill-slot="content">
    <div class="main_wrapper">
        <div style="margin-top:20pt">
            <table id="example" class="info_table" cellspacing="0">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Source Name</th>
                    <th>Organ</th>
                    <th>Dignity</th>
                    <th>Date</th>
                    <th>Antibody</th>
                    <th>Used Share</th>
                    <th>Sample Mass</th>
                </tr>
                </thead>
            </table>

        </div>
    </div>
    <script>

        $(document).ready(function () {
            // create dataTable
            console.log(${project})
            $('#example').dataTable({
                data: ${project},
                columns: [
                    { data: "filename",
                        "render": function (data, type, row) {
                            return "<a class='nostylelink'  href= '/msrun/" + row["ms_run_id"] + "'>" + data + "</a>";
                        }},
                    { data: "patient_id",
                        "render": function (data, type, row) {
                            return "<a class='nostylelink'  href= '/source/" + data + "'>" + data + "</a>";
                        }},
                    { data: "organ",
                        "render": function (data, type, row) {
                            return "<a class='nostylelink'  href= '/organ/" + data + "'>" + data + "</a>";
                        }},
                    { data: "dignity",
                        "render": function (data, type, row) {
                            return "<a class='nostylelink'  href= '/dignity/" + data + "'>" + data + "</a>";
                        }},
                    { data: "ms_run_date"},
                    { data: "antibody_set"},
                    { data: "used_share"},
                    { data: "sample_mass"},

                ],
                "sDom": 'T<"clear">lfrtip',
                oTableTools: {
                    "sSwfPath": "${request.static_url('ligando:static/swf/copy_csv_xls_pdf.swf')}",
                    "aButtons": ["csv"]
                }
            });
        });
    </script>

</metal:block>

</body>
</html>
</html>