<!DOCTYPE html>
<html lang="${request.locale_name}">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
<div metal:define-slot="head">
    <title>HLA Ligand Atlas</title>

    <link rel="stylesheet" type="text/css" href="${request.static_url('ligando:static/css/main_styles.css')}">
    <link rel="stylesheet" type="text/css" href="${request.static_url('ligando:static/css/menu.css')}">
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="${request.static_url('ligando:static/css/jquery.dataTables.min.css')}">
    <link rel="stylesheet" type="text/css" href="${request.static_url('ligando:static/css/jquery-ui.min.css')}">
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="${request.static_url('ligando:static/css/dataTables.tableTools.css')}">
    <!--? jQuery-->
    <script src="${request.static_url('ligando:static/js/jquery-1.10.2.min.js')}"></script>

    <!-- DataTables -->
    <script src="${request.static_url('ligando:static/js/jquery.dataTables.min.js')}"></script>
    <script src="${request.static_url('ligando:static/js/dataTables.tableTools.js')}"></script>

    <script src="${request.static_url('ligando:static/js/jquery-ui.min.js')}"></script>
    <script src="${request.static_url('ligando:static/js/menu.js')}"></script>
    <script src="${request.static_url('ligando:static/js/shared.js')}"></script>
    <script type="text/javascript" charset="utf8"
            src="${request.static_url('ligando:static/js/jquery.flot.js')}"></script>
    <script type="text/javascript" charset="utf8"
            src="${request.static_url('ligando:static/js/jquery.flot.pie.js')}"></script>

    <script type="text/javascript" charset="utf8"
            src="${request.static_url('ligando:static/js/jssor.slider.mini.js')}"></script>

    <script>
        // tooltips
        $(function () {
            $(document).tooltip();
        });
    </script>

</div>
</head>

<body>


<div id="main_container">
    <header id="header">
        <div class="main_wrapper">
            <!--?<div class="logo"><a href="http://www.uni-tuebingen.de"><img width="200px" src="../static/images/UT_WBMW_Rot_RGB_01.png"></a></div>-->
            <div class="title_wrapper">
                <div class="title"><a style="color: inherit;text-decoration:none;" href="/">HLA Ligand Atlas</a></div>
                <div id="search_div" style="text-align: center; float:right; margin-top: 40px; margin-right: 5px">
                    <form method="POST" action="/search">
                        <!--? this js magic shows a help text, which will disappear on focus-->
                        <input style="width: 300px; font-size: 16px;" name="search_all" value="Search Database"
                               onfocus="if (this.value=='Search Database') this.value='';"
                               onblur="this.value = this.value==''?'Search Database':this.value;">
                        <!--? TODO: button could change color on hover-->
                        <input type="submit" value="Search" class="nice_button" style="width: 80px;margin-left: 10px"/>
                    </form>
                    <!--?<p style="text-align: left">e.g. Peptide, Protein</p>-->
                </div>
                <br>
                <br>
                <!--? This is the main menu-->
                <div id="main_menu">
                    <ul id="sddm">
                        <li>

                            <a href="/"
                               onmouseover="mopen('m1')"
                               onmouseout="mclosetime()">Home</a>

                            <div id="m1"
                                 onmouseover="mcancelclosetime()"
                                 onmouseout="mclosetime()">
                                <a href="/news">News</a>
                            </div>
                        </li>
                        <li>
                            <a href="/">Tissue Atlas</a>
                        </li>
                        <li>
                            <a href="/">HLA Atlas</a>
                        </li>

                        <li>
                            <a
                                    onmouseover="mopen('m2')"
                                    onmouseout="mclosetime()">About</a>

                            <div id="m2"
                                 onmouseover="mcancelclosetime()"
                                 onmouseout="mclosetime()">
                                <a href="/faq">FAQ</a>
                                <a href="/info">Information</a>
                                <a href="/contact">Contact</a>
                                <a href="http://www.uni-tuebingen.de/impressum.html">Imprint</a>
                            </div>
                        </li>
                    </ul>
                </div>
                <div style="clear:both"></div>

                <hr style="width: 1200px" size="3" color="black">
            </div>
        </div>
    </header>

    <main>
        <div id="content_div" metal:define-slot="content"></div>
    </main>

    <footer id="footer">
        <hr style="width: 1200px" size="3" color="black">
        <div class="logo"><a href="http://www.uni-tuebingen.de"><img width="150px"
                                                                     src="../static/images/UT_WBMW_Rot_RGB_01.png"></a>
        </div>

    </footer>
</div>
<!-- Placed at the end of the document so the pages load faster -->


</body>
</html>
