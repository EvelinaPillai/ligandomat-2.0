
<html metal:use-macro="load: base_layout.pt">
<!DOCTYPE html>
<html lang="${request.locale_name}">
<head>


</head>

<body>
<div class="main_wrapper">
<div class="wrapper">
    <h1 style="text-align: center">${source}</h1>
    <div  style="margin-left: auto; margin-right: auto;width: 700px;
  display: block;">
        <table>
            <tr>
                <td>Number of peptides: </td><td id="pep_stat"> </td>
            </tr>
            <tr>
                <td>Number of spectra: </td><td id="spec_stat"> </td>
            </tr>
            <tr>
                <td>Number of protein: </td><td id="prot_stat"> </td>
            </tr>
            <tr>
                <td>HLA-Typing: </td><td id="typing"> </td>
            </tr>
        </table>

    </div>
    </div>
<br>

    <table id="example"  class="display" cellspacing="0" width="80%">
        <thead>
        <tr>
        <th>MS Run</th>
        </tr>
        </thead>
    </table>
</div>

<script>
$(document).ready(function() {
    document.getElementById("pep_stat").innerHTML = ${statistics}[0]["count_pep"];
    document.getElementById("spec_stat").innerHTML = ${statistics}[0]["count_hits"];
    document.getElementById("prot_stat").innerHTML = ${statistics}[0]["count_prot"];
    document.getElementById("typing").innerHTML = ${statistics}[0]["hla_category"];


});

$(document).ready(function() {




$('#example').dataTable( {
    "paging":   false,
    "ordering": false,
    "info":     false,
    searching: false,
    data: ${runs},
    columns: [
        { data: "filename",
            "render": function ( data, type, row ) {
                return "<a class='nostylelink'  href= '/msrun/"+data + "'>"+data + "</a>" ;
            }}
    ],
    "sDom": 'T<"clear">lfrtip'
} );
} );
</script>



</body>

</html>
