<!DOCTYPE html>
<html metal:use-macro="load: base_layout.pt">
<html lang="${request.locale_name}">
<head>

</head>

<body>
<metal:block fill-slot="content">
    <div class="main_wrapper">
        <!--? TODO: change class of all tables class="table table-striped table-bordered" -->
        <table id="class1" class="table table-striped table-bordered" width="100%">
            <thead>
            <tr>
                <th>HLA</th>
                <th title='Number of samples with this HLA'># Samples</th>
                <th title='Number of peptides in samples with this HLA'># Peptides</th>
                <th title='Peptides considered to be binders by netMHC'># Binding peptides</th>
            </tr>
            </thead>
        </table>

    </div>


    <script>
        $(document).ready(function () {
            // create dataTable
            $('#class1').dataTable({
                "paging": true,
                "info": true,
                searching: true,
                data: ${class1},
                columns: [
                    {
                        data: "hla",
                        "render": function (data, type, row) {
                            return "<a class='nostylelink'  href= '/hla/" + data + "'>" + data + "</a>";
                        }
                    },
                    { //TODO: fix other links
                        data: "samples",
                        "render": function (data, type, row) {
                            return "<a class='nostylelink'  href= '/source/" + data + "'>" + data + "</a>"; //currently there is no page holding all samples
                        }
                    },
                    {
                        data: "peptides",
                        "render": function (data, type, row) {
                            return "<a class='nostylelink'  href= '/organ/" + data + "'>" + data + "</a>";

                        }
                    },
                    {
                        data: "scored_peptides",
                        "render": function (data, type, row) {
                            return "<a class='nostylelink'  href= '/dignity/" + data + "'>" + data + "</a>";
                        }
                    }
                ]
            });
        });



    </script>

</metal:block>

</body>
</html>
</html>